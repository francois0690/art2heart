<div class="form-container">
  <%= simple_form_for(@piece) do |f| %>
  <%= f.input :name %>
  <%= f.input :artist %>
  <%= f.select :category, collection: %w(peinture sculpture photo autres) %>
  <%= f.input :price %>
  <%= f.input :photos, hint: "Votre oeuvre", label:'Selectionner vos photo', as: :file, input_html: { multiple: true, accept: "image/*" }%>
  <%= f.submit "Valider", class: "btn btn-ghost btn-lg btn-block btn-booking" %>
<% end %>
</div>

